{
  "name": "works",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "https://github.com/Tutuixa/dev-notes.git",
  "author": "Tutuixa <thuivaz@icloud.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder"
  },
  "build": {
    "mac": {
      "category": "utilities"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "utilities"
    },
    "win": {
      "target": "msi"
    },
    "asarUnpack":[
        "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
        "node_modules/ffmpeg-static/index.js",
        "node_modules/ffmpeg-static/package.json"
        ]
  }
}
